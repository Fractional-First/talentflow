{
  "permissions": {
    "allow": [
      "Bash(npm run test:run:*)",
      "Bash(npm run build:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run dev:*)",
      "Bash(npx tsc:*)",
      "Bash(npx supabase:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "mcp__supabase__execute_sql"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit-lint.sh\"",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.claude/hooks/verify-work.sh\"",
            "timeout": 180
          },
          {
            "type": "prompt",
            "prompt": "After verification completes, check git status. If there are uncommitted changes, ask: 'Tests passed. Would you like me to commit these changes?' Show a brief summary of what changed. If they say yes, create appropriate commits with descriptive messages. If no uncommitted changes exist, don't mention commits."
          }
        ]
      }
    ]
  }
}
